<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_tipo_sorteio"
    android:background="@color/cor1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

        <android.widget.Button
            android:id="@+id/btn_sorteio_presencial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bk3_round"
            android:textColor="@color/cor6"
            android:fontFamily="@font/lobster_regular"
            android:textSize="60sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="40dp"
            android:text="@string/btn_sorteio_prencial"/>

        <android.widget.Button
            android:id="@+id/btn_sorteio_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bk3_round"
            android:textColor="@color/cor6"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:layout_margin="40dp"
            android:fontFamily="@font/lobster_regular"
            android:textSize="60sp"
            android:text="@string/btn_sorteio_online" />

    </LinearLayout>
</FrameLayout>