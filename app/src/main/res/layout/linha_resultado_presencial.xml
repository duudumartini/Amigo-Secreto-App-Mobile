<!-- linha_participante.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linha_participante"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/bloco_participante"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bk3_round"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_participante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/lobster_regular"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/cor6"
            android:textSize="25sp"
            android:text="Participante"/>

        <ImageView
            android:id="@+id/ic_olho"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_olho_aberto" />
    </LinearLayout>

</LinearLayout>
